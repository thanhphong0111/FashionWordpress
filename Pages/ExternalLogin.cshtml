@page
@model Group1_CourseOnline.Pages.ExternalLoginModel
@{
    ViewData["Title"] = "Login with Google";
}
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row">
                            <span style="color: #0367d1;font-size: 16px;margin: 0 0 10px;line-height: 1.7em;">
                                You have just successfully logged in. The first time you need to update the information below.
                            </span>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <form class="mx-1 mx-md-4" asp-page-handler="Confirmation">
                                    @{
                                        if (TempData["msg"] != null)
                                        {
                                            <p><span style="color: red">@TempData["msg"]</span></p>
                                        }
                                    }
                                    <div class=" flex-row align-items-center mb-4">
                                        @*<i class="fas fa-user fa-lg me-3 fa-fw"></i>*@
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">First Name</label>
                                            <input asp-for="Account.Customer.FirstName" type="text" id="form3Example1c" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class=" flex-row align-items-center mb-4">
                                        @* <i class="fas fa-user fa-lg me-3 fa-fw"></i>*@
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Last Name</label>
                                            <input asp-for="Account.Customer.LastName" type="text" id="form3Example1c" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class=" flex-row align-items-center mb-4">
                                        @*<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>*@
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            <input asp-for="Account.Email" type="email" disabled id="form3Example3c" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class=" flex-row align-items-center mb-4">
                                        @*<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>*@
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Phone</label>
                                            <input asp-for="Account.Customer.Phone" type="number" id="form3Example3c" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class=" flex-row align-items-center mb-4">
                                        @*<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>*@
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Date Of Birth</label>
                                            <input asp-for="Account.Customer.BirthDate" type="date" id="form3Example3c" class="form-control" required />
                                        </div>
                                    </div>

                                    <div class=" justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button style="margin-left:75px" type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>


                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>